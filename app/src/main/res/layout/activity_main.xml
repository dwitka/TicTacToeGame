            android:height="100dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/button6"
            android:width="100dp"
            android:height="100dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/button7"
            android:width="100dp"
            android:height="100dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/button8"
            android:width="100dp"
            android:height="100dp"
            android:layout_gravity="center"
